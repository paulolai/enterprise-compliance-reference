{
  "name": "pricing-engine-ts-vitest",
  "version": "1.0.0",
  "type": "module",
  "description": "Code as Specification demo implementation",
  "main": "src/pricing-engine.ts",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:allure": "vitest run --config vitest.config.allure.ts",
    "test:coverage": "vitest run --coverage",
    "coverage:open": "npx --yes http-server coverage -o",
    "coverage:domain": "tsx scripts/check-domain-coverage.ts",
    "report:allure:generate": "allure generate allure-results --clean -o reports/allure-report",
    "report:allure:serve": "allure serve allure-results",
    "report:allure:view": "npx --yes http-server reports/allure-report -o -c-1"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "catalog:",
    "@vitest/runner": "catalog:",
    "allure-commandline": "catalog:",
    "allure-vitest": "catalog:",
    "fast-check": "catalog:",
    "glob": "^11.0.0",
    "ts-node": "^10.9.1",
    "tsx": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "dependencies": {
    "zod": "catalog:"
  }
}
