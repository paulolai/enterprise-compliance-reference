{
  "name": "typescript-cucumber",
  "version": "1.0.0",
  "description": "Gherkin/Cucumber implementation demonstrating the Translation Layer Tax",
  "scripts": {
    "test": "npm run build && cucumber-js --require dist/step-definitions/**/*.js",
    "build": "npx tsc",
    "test:report": "npm run build && cucumber-js --format json:cucumber-report.json --require dist/step-definitions/**/*.js"
  },
  "keywords": ["gherkin", "cucumber", "testing", "anti-pattern"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@cucumber/cucumber": "^10.0.0",
    "@cucumber/pretty-formatter": "^1.0.0",
    "@types/chai": "^4.3.0",
    "@types/node": "^20.0.0",
    "chai": "^4.3.0",
    "typescript": "^5.0.0",
    "ts-node": "^10.9.0"
  },
  "cucumber": {
    "format": [
      "pretty"
    ]
  }
}
