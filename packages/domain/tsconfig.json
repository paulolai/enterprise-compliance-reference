{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist",
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@executable-specs/shared": ["../shared/src"],
      "@executable-specs/shared/*": ["../shared/src/*"],
      "@executable-specs/shared/fixtures": ["../shared/fixtures"],
      "@executable-specs/shared/fixtures/*": ["../shared/fixtures/*"]
    }
  },
  "include": ["src/**/*", "test/**/*"],
  "references": [
    { "path": "../shared" }
  ]
}
