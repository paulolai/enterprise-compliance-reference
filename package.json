{
  "packageManager": "pnpm@9.15.4",
  "scripts": {
    "test": "cd implementations/typescript-vitest && npm test",
    "test:coverage": "cd implementations/typescript-vitest && npm run test:coverage",
    "test:allure": "cd implementations/typescript-vitest && npm run test:allure",
    "reports:allure": "allure generate allure-results/ --clean --output allure-report/",
    "reports:allure:open": "allure open allure-report/",
    "reports:allure:serve": "allure serve allure-results/",
    "reports:attestation": "node implementations/typescript-vitest/scripts/generate-attestation.js",
    "docs:fix": "find docs -name '*.md' -exec markdown-toc -i {} \\;",
    "prepare": "husky"
  },
  "lint-staged": {
    "docs/*.md": "bash -c 'for f in \"$@\"; do markdown-toc -i \"$f\"; done' --"
  },
  "dependencies": {
    "better-sqlite3": "^12.6.2",
    "drizzle-orm": "^0.45.1",
    "stripe": "^20.2.0"
  },
  "devDependencies": {
    "allure-commandline": "^2.36.0",
    "drizzle-kit": "^0.31.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "markdown-toc": "^1.2.0"
  }
}
