{
  "packageManager": "pnpm@9.15.4",
  "scripts": {
    "dev:frontend": "cd implementations/react-playwright && npm run dev",
    "dev:backend": "cd implementations/react-playwright && npm run dev:with-server",
    "test": "cd implementations/typescript-vitest && npm test",
    "test:unit": "cd implementations/typescript-vitest && npm test",
    "test:e2e": "cd implementations/react-playwright && npm test",
    "test:coverage": "cd implementations/typescript-vitest && npm run test:coverage",
    "test:allure": "cd implementations/typescript-vitest && npm run test:allure",
    "reports:allure": "allure generate allure-results/ --clean --output allure-report/",
    "reports:allure:open": "allure open allure-report/",
    "reports:allure:serve": "allure serve allure-results/",
    "reports:attestation": "node implementations/typescript-vitest/scripts/generate-attestation.js",
    "test:all": "npx tsx scripts/test-runner.ts",
    "test:ci": "npx tsx scripts/test-runner.ts",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:seed": "node implementations/shared/src/db/seed.js",
    "docs:fix": "find docs -name '*.md' -exec markdown-toc -i {} \\;",
    "adr:sync": "npx tsx@latest scripts/sync-agents-from-adr.ts",
    "prepare": "husky"
  },
  "lint-staged": {
    "docs/ARCHITECTURE_DECISIONS.md": "pnpm run adr:sync",
    "docs/*.md": "bash -c 'for f in \"$@\"; do markdown-toc -i \"$f\"; done' --",
    "implementations/react-playwright/**/*.{ts,tsx}": "bash -c 'cd implementations/react-playwright && pnpm exec eslint --fix \"$@\"' --"
  },
  "dependencies": {
    "better-sqlite3": "^12.6.2",
    "drizzle-orm": "^0.45.1",
    "stripe": "^20.2.0"
  },
  "devDependencies": {
    "allure-commandline": "^2.36.0",
    "drizzle-kit": "^0.31.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "markdown-toc": "^1.2.0",
    "tsx": "^4.21.0"
  }
}
